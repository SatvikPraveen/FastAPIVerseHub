# File Location: .env.example
# 
# Environment variables template for FastAPIVerseHub
# Copy this file to .env and update with your actual values

# ======================
# ENVIRONMENT SETTINGS
# ======================
ENVIRONMENT=development
DEBUG=true

# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://user:password@localhost:5432/fastapi_verse_hub
# Alternative for development:
# DATABASE_URL=sqlite:///./app.db

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_URL=redis://localhost:6379/0

# ======================
# SECURITY SETTINGS
# ======================
# Generate strong keys in production!
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ======================
# EMAIL CONFIGURATION
# ======================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com

# ======================
# FILE UPLOAD SETTINGS
# ======================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif

# ======================
# EXTERNAL SERVICES
# ======================
# Add your external API keys here
EXTERNAL_API_KEY=your-external-api-key
OPENAI_API_KEY=your-openai-api-key  # If using AI features

# ======================
# CORS SETTINGS
# ======================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=*

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600  # 1 hour in seconds

# ======================
# LOGGING CONFIGURATION
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
LOG_FILE=./logs/app.log

# ======================
# MONITORING & OBSERVABILITY
# ======================
SENTRY_DSN=your-sentry-dsn-here
METRICS_ENABLED=true

# ======================
# DEVELOPMENT SETTINGS
# ======================
# Only used in development
HOT_RELOAD=true
API_PREFIX=/api/v1

# ======================
# TESTING SETTINGS
# ======================
# Used by test suite
TEST_DATABASE_URL=sqlite:///./test.db
TEST_REDIS_URL=redis://localhost:6379/1

# ======================
# CLOUD STORAGE (Optional)
# ======================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-west-2

# Google Cloud Storage
GCS_BUCKET_NAME=your-gcs-bucket
GCS_CREDENTIALS_PATH=./credentials/gcs-credentials.json

# ======================
# SOCIAL AUTH (Optional)
# ======================
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

GITHUB_OAUTH_CLIENT_ID=your-github-oauth-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-oauth-client-secret

# ======================
# FEATURE FLAGS
# ======================
ENABLE_REGISTRATION=true
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOADS=true
ENABLE_SOCIAL_AUTH=false